{% extends 'ThemeBootstrapBundle::layout.html.twig' %}

{% block title %}Grid List - Bootstrap Twiter Theme{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>{{ generator.list.title | trans }} <small>or <a href="{{ path(generator.route ~ '_new') }}">add new</a></small></h1>
    </div>

{% if pager.count == 0  %}
    <div id="no_records" class="alert-message warning">
        <p>
            {% trans %}No records found. You can filter again or{% endtrans %}
        </p>
        <p>
            <a href="{{ path(generator.route ~ '_new') }}"><button type="submit" class="btn primary">{% trans %}Add New{% endtrans %}</button></a>
        </p>
    </div>
{% else %}
    <div class="row">

        <!-- List -->
        <div class="span12 columns">
            <div>
                <table class="zebra-striped" id="sortTableExample">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="checkall"/></th>
                            {% for field in generator.listDisplayFields %}
                            <th>{{ field.label | trans  }}</th>
                            {% endfor %}
                            <th>Actions</th>
                        </tr>
                   </thead>
                    <tbody>
                        {% for record in pager.getResults %}
                        <tr>
                            <td><input type="checkbox"/></td>
                            {% for fieldName, field in generator.listDisplayFields %}
                                {% if field.date_format is defined %}
                            <td>{{ generator.renderField(fieldName, record) | date(field.date_format) }}</td>
                                {% else %}
                            <td>{{ generator.renderField(fieldName, record) }}</td>
                                {% endif %}
                            {% endfor %}
                            <td>
                                <a href="{{ path(generator.route ~ '_show', { 'id': generator.renderField('id', record)}) }}">{% trans %}View{% endtrans %}</a>
                                <a href="{{ path(generator.route ~ '_edit', { 'id': generator.renderField('id', record)}) }}">{% trans %}Edit{% endtrans %}</a>
                                <a href="{{ path(generator.route ~ '_delete', { 'id': generator.renderField('id', record)}) }}">{% trans %}Delete{% endtrans %}</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row">

                <div class="span5 columns batch_action">
                    <form action="" method="post">
                        Actions
                        <select name="batchSelect" id="batchSelect" class="small">
                            <option></option>
                            <option>Delete</option>
                        </select>
                        <button type="submit">go</button>
                    </form>
                </div>

                <div class="span7 columns last pagination">
                    <ul>
                        <li class="prev disabled"><a href="#">&larr; Previous</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li class="next"><a href="#">Next &rarr;</a></li>
                    </ul>
                </div>

            </div>

        </div>

        <!-- Filter -->
        <div class="span4 columns">

            <form action="" class="form-stacked">
                <fieldset>
                    <legend>Filter</legend>

                    <div class="clearfix">
                        <label for="firstname">First Name</label>
                        <div class="input">
                            <input class="medium" id="firstname" name="firstname" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="latstname">Last Name</label>
                        <div class="input">
                            <input class="medium" id="lastname" name="lastname" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="language">Language</label>
                        <div class="input">
                            <select name="language" id="language" class="medium">
                                <option></option>
                                <option>English</option>
                                <option>Portugues</option>
                            </select>
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="birthday">Birthday</label>
                        <div class="input">
                            from<br/>
                            <input class="small date" id="birthday_to" name="birthday_to" type="text" /><br/>
                            to<br/>
                            <input class="small date" id="birthday_from" name="birthday_from" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                </fieldset>
                <div class="actions">
                <button type="submit" class="btn primary">Filter</button>&nbsp;<button type="reset" class="btn">Reset</button>
                </div>
            </form>


        </div>

    </div>
{% endif %}
{% endblock %}